generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
  binaryTargets = ["native", "debian-openssl-1.1.x", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TransactionType {
  BUY
  SELL
}

enum TransactionCurrency {
  USD
  TRY
}

model TradeTransaction {
  id                  String              @id @default(uuid())
  type                TransactionType
  transactionValue    Decimal?            @db.Decimal(18, 4)
  transactionCurrency TransactionCurrency?
  amountReceived      Decimal             @db.Decimal(18, 4)
  amountSold          Decimal?            @db.Decimal(18, 4)
  pricePerUnit        Decimal?            @db.Decimal(18, 6)
  receivedCurrency    TransactionCurrency @default(TRY)
  commissionPercent   Decimal?            @db.Decimal(8, 4)
  effectiveRateTry    Decimal?            @db.Decimal(18, 6)
  occurredAt          DateTime            @default(now())
  createdAt           DateTime            @default(now())
  updatedAt           DateTime            @updatedAt
}
